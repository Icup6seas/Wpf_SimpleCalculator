        <Button Content="+" HorizontalAlignment="Left" FontSize="30" Background ="AliceBlue" Margin="417,372,0,0" VerticalAlignment="Top" Width="75" Height="64" Click="btn_Operator_Click"/>
        <Button Name="btn_Equal" Content="=" HorizontalAlignment="Left" FontSize="40" Background="GreenYellow" Margin="346,463,0,0" VerticalAlignment="Top" Width="146" Height="64" Click="btn_Equal_Click"/>

    </Grid>
